/* pages/index/confirm/confirm.wxss */

.confirm-address{
    width: 100%;
    display: flex;
    align-items: center;
    padding: 20px;
    border-top: 1px solid #ccc;
    border-bottom: 10px solid #eee;
}
.address-icon{
  margin: 0 17px;
}
.address-l-icon{
  margin-bottom: 14px;
}
.address-name{
  flex: 1;
}
.address-title{
  font-size: 18px;
  font-weight: 550;
}
.address-part{
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
  word-wrap: break-word;
}
.address-back{
  width: 30px;
  margin-right: 10px;
}

/* 取餐方式和时间 */
.confirm-way,.confirm-time,.confirm-pay,.confirm-cart,.confirm-need{
  width: 100%;
  padding: 20px 8px;
  border-bottom: 10px solid #eee;
}
.way-title,.time-title{
  margin-left:15px;
  margin-bottom: 15px;
}
.l-radio-group{
  margin-left: 15px;
  flex-wrap: wrap;
}
.confirm-way l-radio,.confirm-time l-radio{
  flex-basis: 50%;
  margin-bottom: 20px;
}

/* 支付方式 */
.confirm-pay,.confirm-cart,.confirm-need{
  padding-bottom: 0;
}
.pay-title{
  border-bottom: 1px solid #eee;
  padding-bottom: 15px;
  padding-left: 15px;
}
.pay-small{
  font-size: 14px;
  color: #ccc;
}
.confirm-pay l-radio,.confirm-need l-radio{
  padding: 10px 20px 10px 20px;
  border-bottom: 1px solid #eee;
}
.confirm-pay .l-radio-group,.confirm-need .l-radio-group{
  margin-left: 0;
}
.pay-wallet,.pay-wechat{
  position: relative;
  padding-left: 25px;
}
.wallet-icon{
  position: absolute;
  top:8px;
  left:-5px;
}
.comment-icon{
  position: absolute;
  top:0;
  left:-5px;
}
/* 购物车 */
.cart-item{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  min-height: 50px;
}
.item-name{
  flex:1;
  margin-left: 15px;
  padding-bottom: 15px;
}
.item-title{
  margin-bottom: 5px;
  font-size: 20px;
  font-weight: 500;
}
.item-price{
  font-size: 22px;
  font-weight: 500;
}
.item-btns{
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 10px;
}
.item-btn{
  font-size: 22px;
  margin-right: 12px;
}
.item-count{
  font-size: 24px;
  margin-right: 7px;
}
.cart-allCount{
  display: flex;
  padding: 10px;
}
.count-text{
  flex: 1;
  font-size: 18px;
  margin-left: 15px;
}
.warning-icon{
  display: inline-block;
  margin-right: 7px;
}
.count-explain{
  margin-top: 5px;
  font-size: 14px;
  color: rgb(186,186,186);
  padding-bottom: 5px;

}
.count-explain text{
  border-bottom: 1px solid rgb(186, 186, 186);
}
.count-num{
  font-size: 22px;
  margin-right: 5px;
  font-weight: 500;
}
/* 发票 */
.confirm-need{
  padding: 0;
}
/* 去支付 */
.confirm-goTopay{
  border-top:1px solid #eee;
  width: 100%;
  padding-top: 20px;
  padding-left: 30px;
  display: flex;
  align-items: center;
  padding-bottom: 20px;
}
.goTopay-allCount{
  flex: 1;
  font-size: 18px;
  display: flex;
  align-items: center;
}
.goTopay-allCount text{
  font-size: 28px;
}
.goTopay-btn{
  margin-right: 30px;
  width: 100px;
  height: 40px;
  background-color: rgb(255, 230, 164);
  text-align: center;
  border-radius: 25px;
  line-height: 40px;
}
.goTopay-btn .back-icon{
  display:inline-block;
}

/* 弹出 */
.popup{
  width: 550rpx;
  height: 500rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 10px;
  position: relative;
  padding: 10px 0;
}
.popup-image{
  position: absolute;
  top: -20px;
  left: 50%;
  margin-left: -20px;
  width: 40px;
  height: 40px;
} 
.popup-icon{
  position: absolute;
  top: 8px;
  right: 8px;
}
.popup-top{
  height: 60px;
  line-height: 60px;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  margin-top: 15px;
  border-bottom: 1px solid #eee;
}
.popup-address{
  min-height: 60px;
  padding-top: 10px ;
  padding-bottom: 10px ;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}
.address-name{
  flex: 1;
}
.address-titleName{
  font-size: 15px;
  margin-bottom: 3px;
  margin-left: -20px;
}
.address-text{
  font-size: 11px;
  color: #ccc;
  padding-left: 20px;
  text-align: left;
  line-height: 1.5;
}
.address-distance{
  margin-left: 15px;
  margin-right: 10px;
  align-self: flex-start;
  font-size: 15px;
}
.popup-bottom{
  padding-top: 15px;
  padding-bottom:10px;
}
.modify-btn{
  text-align: center;
  font-size: 12px;
  margin-bottom: 15px;
}
