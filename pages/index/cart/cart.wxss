/* 购物车样式 */
.page-cart{
  width: 100%;
  height: 70px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  border-top: 1px solid #ccc;
  z-index: 91;
}
.cart-num{
  margin-left: 10px;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.cart-allNum{
  position: absolute;
  right: 0;
  top: 0;
  width: 16px;
  height: 16px;
  border: 1px solid #000;
  border-radius: 50%;
  text-align: center;
  line-height: 14px;
}
.cart-pic{
  width:32px;
  height: 32px;
}
.cart-price{
  margin-left: 10px;
  font-size: 16px;
}
.cart-price text{
  font-size: 20px;
}
.cart-btn{
  position: absolute;
  right: 10px;
  width: 80px;
  height: 35px;
  background-color: rgb(254,189,11);
  border:none;
  border-radius: 18px;
  line-height: 35px;
  /* text-align: center; */
  font-size: 14px;
  box-sizing: border-box;
  padding-left: 12px;
}
.cart-btn::before{
  content: ">";
  display: inline-block;
  font-size: 18px;
  position: absolute;
  right: 10px;
  top: -1px;
}
/* 购物车详情列表 */
.cart-list{
  width: 100%;
  min-height: 50px;
  position: absolute;
  bottom: 100%;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 9;
}
.list-top{
  height: 50px;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  padding: 0 10px;
  position: relative;
  font-size: 14px;
}
.list-clear{
  position: absolute;
  right: 10px;
}
.list-clear image{
  width: 20px;
  height: 20px;
  position: absolute;
  left: -30px;
}
.list-item{
  min-height: 80px;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  padding:0 20px 0 10px;
}
.item-name{
  flex: 1;
}
.item-title{
  margin-bottom: 5px;
}
.item-price{
  font-size: 18px;
  font-weight: 500;
}
.list-item-btns{
  display: flex;
  align-items: center;
  font-size: 24px;
}
.list-item-btn{
  margin-left: 10px;
  position: relative;
}
.list-item-count{
  margin-left:15px ;
  font-size: 18px;
  margin-top: 5px;
}