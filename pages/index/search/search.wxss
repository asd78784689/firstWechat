/* pages/index/search.wxss */
@import '../food-item/food-item.wxss';
@import '../cart/cart.wxss';

page{
  /* 用于作为父元素 让子元素能继承到完整的全屏高度 */
  height: 100%;
}

.search-inner{
  display: flex;
  align-items: center;
  padding: 0 15px;
  width: 100%;
  padding-bottom: 20px;
  background-color: #fff;
}
.back-btn{
  width: 33px;
  border-bottom: 2px solid #000;
  font-size: 16px;
  margin-right: 15px;
  margin-left: 20px;
}
.search-ipt{
  flex: 1;
}
/* 内容区域 */
.search-container{
  background-color: #eee;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: -28px;
}
.search-text{
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.food-itemSinner{
  height: 100%;
  margin-top: 20px;
  padding-left: 70px;
  padding-right: 15px;
}

/* 遮罩 */
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.7);
  z-index: 90;
}